<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#16D4F6CC"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <TextView
        android:id="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Profile" />

    <ImageView
        android:id="@+id/imgPhotoUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_account_circle"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:text="User name"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imgPhotoUser"
        app:layout_constraintStart_toStartOf="@+id/imgPhotoUser"
        app:layout_constraintEnd_toEndOf="@id/imgPhotoUser"
        android:layout_marginTop="12dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvGmail"
        android:layout_width="wrap_content"
        android:text="eduardoturing01@gmail.com"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        android:textSize="17sp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSingOut"
        android:layout_width="wrap_content"
        android:text="Sing out"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_logout"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvGmail"
        app:layout_constraintStart_toStartOf="@+id/tvGmail"
        app:layout_constraintEnd_toEndOf="@id/tvGmail"
        android:textSize="17sp"
        android:backgroundTint="#FF0063"
        android:paddingVertical="9dp"
        android:paddingHorizontal="30dp"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>